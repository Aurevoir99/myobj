/* pages/hot/hot.wxss */

/* 头部  */

.title {
  display: block;
  width: 100%;
  height: 150rpx;
  line-height: 150rpx;
  text-align: center;
  font-size: 50rpx;
  font-weight: bold;
}

/* 正文 */

.film {
  width: 720rpx;
  border: 2rpx solid #5f9ea0;
  margin-bottom: 10rpx;
  display: flex;
  /* justify-content: space-around; */
}

.images {
  width: 300rpx;
  height: 300rpx;
  margin: 20rpx 20rpx;
}

.felx {
  display: flex;
  flex-direction: column;
  width: 360rpx;
}

.titles {
  height: 100rpx;
  line-height: 100rpx;
  font-weight: bold;
}

.name {
  display: flex;
  flex-direction: column;
}

.cast {
  font-size: 30rpx;
}

.score {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
}
