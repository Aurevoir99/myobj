    </swiper-item>
  </swiper>
  <image class='img' src='{{mydetail.details.images.large}}'></image>

  <view class='name'>
    <view class='film-name'>{{mydetail.details.title}}/{{mydetail.details.original_title}}
      <view class='countries'>{{mydetail.details.countries[0]}} {{mydetail.details.countries[1]}}
      </view>
    </view>
    <view>导演：{{mydetail.details.directors[0].name}}</view>
    <view>主演：{{mydetail.details.casts[0].name}},{{mydetail.details.casts[1].name}},{{mydetail.details.casts[2].name}},{{mydetail.details.casts[3].name}}</view>
    <view>类型：{{mydetail.details.genres[0]}} {{mydetail.details.genres[1]}} {{mydetail.details.genres[2]}}</view>
    <view>豆瓣评分：{{mydetail.details.rating.average}}</view>
    <view>详情：{{mydetail.details.summary}}</view>
    <!-- <view bindtap='buy'>购票观看</view> -->
  </view>
</view>